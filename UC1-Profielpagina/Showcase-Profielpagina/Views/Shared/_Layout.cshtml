<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Showcase_Profielpagina</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profielpagina.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/gdpr.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Showcase_Profielpagina.styles.css" asp-append-version="true" />
</head>
<body>

    <!-- Preloader -->
    <div class="preloader-1" id="loader">
        <span class="line line-1"></span>
        <span class="line line-2"></span>
        <span class="line line-3"></span>
        <span class="line line-4"></span>
        <span class="line line-5"></span>
        <span class="line line-6"></span>
        <span class="line line-7"></span>
        <span class="line line-8"></span>
        <span class="line line-9"></span>
        <span class="line line-10"></span>
        <span class="line line-11"></span>
        <span class="line line-12"></span>
        <span class="line line-13"></span>
        <span class="line line-14"></span>
        <span class="line line-15"></span>
    </div>

    <!-- Content -->
    <main id="content">
        <!-- Card Section 1 -->
        <section class="card-container-1">
            <article class="card1">
                <img src="images/IMG_4615.jpeg" alt="headshot" class="headshot-img">
                <div class="card1-content">
                    <h1 class="card1-title gradient-text">Hi, I am Alper - Software Engineer</h1>
                    <p class="card1-subtext">I bring your ideas to life!</p>
                </div>
            </article>
            <article class="card2">
                <h2>Test Card 2</h2>
                <p>Another example. Use this section to test different styles and content types!</p>
            </article>
        </section>

        <!-- Card Section 2 -->
        <section class="card-container-2">
            <article class="card3">
                <h2>Test Card 3</h2>
                <p>Feel free to add more content like images, buttons, and other elements for further testing!</p>
            </article>
            <article class="card4">
                <h2>Test Card 4</h2>
                <p>Feel free to add more content like images, buttons, and other elements for further testing!</p>
            </article>
        </section>
    </main>

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/gdpr.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
